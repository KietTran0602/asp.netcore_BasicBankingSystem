@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model HeThongNganHang.Models.Account

<div class="container-fluid">
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">Cập nhật thông tin cá nhân</h3>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="profile" asp-action="edit">
                <div class="card-body">
                    <div class="form-group" hidden>
                        <label>Username</label>
                        <input type="text" class="form-control" value="@Model.Username" asp-for="Username"/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>

                        <input type="password" class="form-control" placeholder="Enter new password" asp-for="Password"/>
                    </div>

                    <div class="form-group">
                        <label>Fullname</label>
                        <input type="text" class="form-control" value="@Model.FullName" asp-for="FullName"/>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" value="@Model.Email" asp-for="Email"/>
                    </div>

                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" value="@Model.Phone" asp-for="Phone"/>
                    </div>
                    <div class="form-group" hidden>
                        <label>Balance</label>
                        <input type="text" class="form-control" value="@Model.Balance" asp-for="Balance"/>
                    </div>

                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
    </div>
</div>
